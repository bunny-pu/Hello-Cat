<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radio_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boxes" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clothes" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hats" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sinks" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radio_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="space" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunglasses" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/searchRb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ties" />

    </RadioGroup>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gridRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>