<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_favorite_id"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite"
            app:layout_constraintTop_toTopOf="@+id/iv_favorite"
            android:text="id : 838"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/tv_favorite_create_at"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_favorite"
            app:layout_constraintTop_toBottomOf="@+id/tv_favorite_id"
            android:text="create at : 2018-10-25T00:12:36.000Z"
            android:layout_marginLeft="3dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>